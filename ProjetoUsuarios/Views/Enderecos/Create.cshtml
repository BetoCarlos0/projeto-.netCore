@model ProjetoUsuarios.Models.Endereco

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar novo Endereço</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Bairro" id="floatingInput" class="form-control" placeholder="Bairro" />
                <label asp-for="Bairro" for="floatingInput" class="control-label"></label>
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Cidade" id="floatingInput" class="form-control" placeholder="Cidade" />
                <label asp-for="Cidade" for="floatingInput" class="control-label"></label>
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Estado" id="floatingInput" class="form-control" placeholder="Estado" />
                <label asp-for="Estado" for="floatingInput" class="control-label"></label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EnredecoCompleto" id="floatingInput" class="form-control" placeholder="EndereçoCompleto" />
                <label asp-for="EnredecoCompleto" for="floatingInput" class="control-label"></label>
                <span asp-validation-for="EnredecoCompleto" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Numero" id="floatingInput" class="form-control" placeholder="Numero" />
                <label asp-for="Numero" for="floatingInput" class="control-label"></label>
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
