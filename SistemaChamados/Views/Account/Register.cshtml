@model SistemaChamados.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Cadastro";
}

<div class="container account">
    <h1>@ViewData["Title"]</h1>
    <section>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Name" class="form-control" placeholder="Name" />
                <label for="floatingInput" asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Cpf" class="form-control" placeholder="Cpf" />
                <label for="floatingInput" asp-for="Cpf"></label>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Email" class="form-control" placeholder="Email" />
                <label for="floatingInput" asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="BirthDate" class="form-control" placeholder="BirthDate" />
                <label for="floatingInput" asp-for="BirthDate"></label>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Phone" class="form-control" placeholder="Phone" />
                <label for="floatingInput" asp-for="Phone"></label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Department" class="form-control" placeholder="Department" />
                <label for="floatingInput" asp-for="Department"></label>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Supervisor" class="form-control" placeholder="Supervisor" />
                <label for="floatingInput" asp-for="Supervisor"></label>
                <span asp-validation-for="Supervisor" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Role" class="form-control" placeholder="Role" />
                <label for="floatingInput" asp-for="Role"></label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Ramal" class="form-control" placeholder="Ramal" />
                <label for="floatingInput" asp-for="Ramal"></label>
                <span asp-validation-for="Ramal" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="Password" class="form-control" placeholder="Password" />
                <label for="floatingInput" asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="floatingInput" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                <label for="floatingInput" asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="custom-btn">Cadastrar</button>
        </form>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }