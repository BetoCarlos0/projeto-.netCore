@model SistemaChamados.Data.Identity.UserCustom
@{
    ViewData["Title"] = "Editar Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">

    <div class="pagetitle col-lg-11" style="display: flex; flex-direction: column; margin: 0 auto;">
        <h1>Editar Usuário</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Home">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="ListUsers">Usuários</a></li>
                <li class="breadcrumb-item active">Editar Usuário</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12 d-flex justify-content-around">
                <div class="col-7">
                    <div class="card">
                        <div class="card-body">
                            <br />
                            <h4>Editar Usuário</h4>
                            <!-- Multi Columns Form -->
                            <form asp-controller="Dashboard" asp-action="EditUser" method="post" class="row">
                                <input type="hidden" asp-for="Id" />
                                <div class="form-floating mb-3 col-6">
                                    <input id="floatingName" asp-for="Name" class="form-control" placeholder="Name" />
                                    <label for="floatingName" asp-for="Name"></label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-6">
                                    <input id="floatingCpf" asp-for="CpfNumber" class="form-control" placeholder="CpfNumber" />
                                    <label for="floatingCpf" asp-for="CpfNumber"></label>
                                    <span asp-validation-for="CpfNumber" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-6">
                                    <input id="floatingEmail" asp-for="Email" class="form-control" placeholder="Email" />
                                    <label for="floatingEmail" asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-6">
                                    <input id="floatingBith" asp-for="BirthDate" class="form-control" placeholder="BirthDate" />
                                    <label for="floatingBith" asp-for="BirthDate"></label>
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-6">
                                    <input id="floatingPhone" asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                                    <label for="floatingPhone" asp-for="PhoneNumber"></label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-6">
                                    <input id="floatingDepar" asp-for="Department" class="form-control" placeholder="Department" />
                                    <label for="floatingDepar" asp-for="Department"></label>
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-4">
                                    <input id="floatingSuper" asp-for="Supervisor" class="form-control" placeholder="Supervisor" />
                                    <label for="floatingSuper" asp-for="Supervisor"></label>
                                    <span asp-validation-for="Supervisor" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-4">
                                    <select class="form-select" asp-for="Role" id="floatingSelect" aria-label="Floating label select example">

                                        @foreach (var item in ViewBag.Roles)
                                        {
                                            if (item.Name == Model.Role)
                                            {
                                                <option selected value="@item.Name">@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Name">@item.Name</option>
                                            }
                                        }

                                    </select>
                                    <label for="floatingSelect" asp-for="Role">Cargo</label>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3 col-4">
                                    <input id="floatingRamal" asp-for="Ramal" class="form-control" placeholder="Ramal" />
                                    <label for="floatingRamal" asp-for="Ramal"></label>
                                    <span asp-validation-for="Ramal" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3 col-12">
                                    <div>
                                        <div class="form-check">
                                            @Html.RadioButton("LockoutEnabled",false, true, new { @class = "form-check-input", @name = "flexRadioDefault", @id = "flexRadioDefault1"})
                                            <label class="form-check-label" for="flexRadioDefault1">
                                                Habilitar Conta
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            @Html.RadioButton("LockoutEnabled",true, new { @class = "form-check-input", @name = "flexRadioDefault", @id = "flexRadioDefault2"})
                                            <label class="form-check-label" for="flexRadioDefault2">
                                                Bloquear Conta
                                            </label>
                                        </div>
                                        <span asp-validation-for="Ramal" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Editar Usuário</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <br />
                            <h4>Alterar Senha</h4>
                            <form asp-controller="Dashboard" asp-action="ChangePassword" method="post">
                                <input type="hidden" asp-for="Id" />

                                <div class="form-floating mb-3">
                                    <input id="floatingBith" asp-for="CurrentPassword" class="form-control" placeholder="CurrentPassword" />
                                    <label for="floatingBith" asp-for="CurrentPassword"></label>
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input id="floatingBith" asp-for="Password" class="form-control" placeholder="Password" />
                                    <label for="floatingBith" asp-for="Password"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input id="floatingBith" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                                    <label for="floatingBith" asp-for="ConfirmPassword"></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="text-left col-12">
                                    <button type="submit" class="btn btn-primary w-100">Alterar Senha</button>
                                </div>
                            </form><!-- End Change Password Form -->
                        </div>
                    </div>
                </div>
            </div>
            <a asp-action="ListUsers" type="button" class="btn btn-secondary btn-sm w-auto m-4">Voltar</a>
        </div>
    </section>
</main><!-- End #main -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }