@model SistemaChamados.Data.Identity.UserCustom
@{
    ViewData["Title"] = "Deleter Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle col-lg-10" style="display: flex; flex-direction: column; margin: 0 auto;">
        <h1>Deletar Usuário</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Home">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="ListUsers">Usuários</a></li>
                <li class="breadcrumb-item active">Deletar Usuário</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row" style="justify-content: center;">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <br />
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CpfNumber)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CpfNumber)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Email)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.BirthDate)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.BirthDate)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Department)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Department)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Supervisor)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Supervisor)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Ramal)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Ramal)
                            </dd>

                            <dt class="col-sm-4">
                                Cargo
                            </dt>
                            <dd class="col-sm-8">
                                @ViewBag.GetUserRole
                            </dd>

                        </dl>
                        <!-- Multi Columns Form -->
                        <form asp-action="DeleteUser" method="post" class="row">
                            <input type="hidden" asp-for="Id" />
                            

                            <div class="col-12">
                                <button class="btn btn-danger" type="submit">Deletar Usuário</button>
                            </div>
                        </form>
                    </div>
                </div>
                <a asp-action="ListUsers" type="button" class="btn btn-secondary btn-sm mt-3">Voltar</a>
            </div>
        </div>
    </section>
</main><!-- End #main -->

