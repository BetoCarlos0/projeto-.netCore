@model SistemaChamados.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">

    <div class="pagetitle col-lg-10" style="display: flex; flex-direction: column; margin: 0 auto;">
        <h1>Novo Cadastro</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Home">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="ListUsers">Usuários</a></li>
                <li class="breadcrumb-item active">Novo Cadastro</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row" style="justify-content: center;">
            <div class="col-lg-10">
                <div class="card mb-3">
                    <div class="card-body">
                        <br />
                        <!-- Multi Columns Form -->
                        <form asp-action="CreateUser" method="post" class="row">

                            <div class="form-floating mb-3 col-6">
                                <input id="floatingName" asp-for="Name" class="form-control" placeholder="Name" />
                                <label for="floatingName" asp-for="Name"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-6">
                                <input id="floatingCpf" asp-for="Cpf" class="form-control" placeholder="Cpf" />
                                <label for="floatingCpf" asp-for="Cpf"></label>
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-6">
                                <input id="floatingEmail" asp-for="Email" class="form-control" placeholder="Email" />
                                <label for="floatingEmail" asp-for="Email"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-6">
                                <input id="floatingBith" asp-for="BirthDate" class="form-control" placeholder="BirthDate" />
                                <label for="floatingBith" asp-for="BirthDate"></label>
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-6">
                                <input id="floatingPhone" asp-for="Phone" class="form-control" placeholder="Phone" />
                                <label for="floatingPhone" asp-for="Phone"></label>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-6">
                                <input id="floatingDepar" asp-for="Department" class="form-control" placeholder="Department" />
                                <label for="floatingDepar" asp-for="Department"></label>
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-4">
                                <input id="floatingSuper" asp-for="Supervisor" class="form-control" placeholder="Supervisor" />
                                <label for="floatingSuper" asp-for="Supervisor"></label>
                                <span asp-validation-for="Supervisor" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-4">
                                <select class="form-select" asp-for="Role" id="floatingSelect" aria-label="Floating label select example">
                                    <option selected>Selecione o cargo</option>
                                    @foreach (var item in ViewBag.Roles)
                                    {
                                        <option value="@item.Name">@item.Name</option>
                                    }
                                </select>
                                <label for="floatingSelect" asp-for="Role">Cargo</label>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-4">
                                <input id="floatingRamal" asp-for="Ramal" class="form-control" placeholder="Ramal" />
                                <label for="floatingRamal" asp-for="Ramal"></label>
                                <span asp-validation-for="Ramal" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-6">
                                <input id="floatingPassword" asp-for="Password" class="form-control" placeholder="Password" />
                                <label for="floatingPassword" asp-for="Password"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-6">
                                <input id="floatingConfirm" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                                <label for="floatingConfirm" asp-for="ConfirmPassword"></label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100" type="submit">Criar Conta</button>
                            </div>
                        </form>
                    </div>
                </div>
                <a asp-action="ListUsers" type="button" class="btn btn-secondary btn-sm">Voltar</a>
            </div>
        </div>
    </section>
</main><!-- End #main -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }