@model Mercado.Models.Product

@{
    ViewData["Title"] = "Deletar Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container delete-confirm">
    <div>
        <h4>@ViewData["Title"]</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.Company)
            </dd class>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirmar" class="btn btn-danger" />
            <a asp-action="Index">Voltar para Lista</a>
        </form>
    </div>
</div>
