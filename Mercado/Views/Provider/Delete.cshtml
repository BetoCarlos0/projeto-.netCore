@model Mercado.Models.Provider

@{
    ViewData["Title"] = "Deletar Fornecedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container delete-confirm">
    <div>
        <h4>@ViewData["Title"]</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Company)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Company)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Activity)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Activity)
            </dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirmar" class="btn btn-danger" />
            <a asp-action="Index">Voltar para Lista</a>
        </form>
    </div>
</div>
